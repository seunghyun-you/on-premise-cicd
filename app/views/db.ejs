<!-- views/db.ejs -->
<!DOCTYPE html>
<html>
    <head>
        <title>Access Information</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 20px;
            }
            h2 {
                color: #333;
            }
            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }
            th, td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }
            th {
                background-color: #f2f2f2;
                font-weight: bold;
            }
            tr:nth-child(even) {
                background-color: #f9f9f9;
            }
            tr:hover {
                background-color: #f1f1f1;
            }
        </style>
    </head>
    <body>
        <h2>Access Information Dashboard</h2>
        <h3>Hostname: <%= hostname %></h3>
        <h4>Database connection successful!</h4>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>OS</th>
                    <th>CPU</th>
                    <th>Memory</th>
                    <th>Host IP</th>
                    <th>Host Port</th>
                    <th>VM IP</th>
                    <th>VM Port</th>
                    <th>Protocol</th>
                    <th>Notes</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <%= tableRows %>
            </tbody>
        </table>

        <p>Total records: <%= totalRecords %></p>
    </body>
</html>